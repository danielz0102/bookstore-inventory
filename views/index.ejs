<style>
  main {
    display: flex;
    flex-direction: column;
    gap: calc(var(--spacing) / 2);
    max-width: 800px;
    width: 100%;
    margin-inline: auto;

    padding: var(--spacing);

    & h1 {
      text-align: center;
    }
  }

  section {
    display: flex;
    flex-direction: column;
    gap: calc(var(--spacing) / 2);
  }
</style>

<main>
  <h1 class="title">Bookstore Inventory</h1>
  <% if (books.length === 0) { %>
  <%- include('partials/empty', { fallback }) %>
  <% } else { %>
  <section>
    <h2><%= section %></h2>
    <%- include('books/partials/bookList', { books }) %>
  </section>
  <% } %>
</main>
