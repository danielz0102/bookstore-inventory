<style>
  main {
    display: flex;
    flex-direction: column;
    padding: var(--spacing);
    gap: var(--spacing);
  }

  h1 {
    text-align: center;
  }
</style>

<main>
  <h1 class="title">Books</h1>
  <%- include('../partials/search', { 
    action: '/books', 
    label: 'Search by title or author', 
    placeholder: 'Search books...',
  }) %>
  <% if (books.length === 0) { %>
  <%- include('../partials/empty', { fallback }) %>
  <% } else { %>
  <%- include('../partials/bookList', { books }) %>
  <% } %>
</main>
