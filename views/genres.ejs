<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Genres</title>
  </head>
  <body>
    <%- include('partials/navbar') %>
    <main>
      <h1>Genres</h1>
      <ul>
        <% if (genres.length === 0) { %>
        <li>There are no genres yet</li>
        <% } %>
        <% genres.forEach(genre => { %>
        <li>
          <a href="/genres/<%= genre.id %>"><%= genre.name %></a>
        </li>
        <% }) %>
      </ul>
    </main>
  </body>
</html>
